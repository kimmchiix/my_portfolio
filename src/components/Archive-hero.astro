---
interface Props {
  subheadline: string;
  headline: string;
  text: string;
  image: string; // image URL or path
  alt?: string;
}

const { subheadline, headline, text, image, alt = "Header image" } = Astro.props;
---

<section class="px-6 py-16 max-w-7xl mx-auto pt-[180px]">
  <div class="flex flex-col-reverse md:flex-row items-center gap-10">
    <!-- Text -->
    <div class="w-full md:w-1/2">
      <p class=" subheadline uppercase tracking-widest mb-2">
        {subheadline}
      </p>
      <h2 class="archiveHeadline font-bold text-gray-900 mb-4">
        {headline}
      </h2>
      <p class="text-gray-600 text-base md:text-lg">
        {text}
      </p>
    </div>

    <!-- Image -->
    <div class="w-full md:w-1/2">
      <img src={image} alt={alt} class="w-full h-auto rounded-md object-cover" />
    </div>
  </div>
</section>