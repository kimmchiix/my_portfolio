---
interface Props {
  subheadline: string;
  headline: string;
  text: string;
  image: string; // image URL or path
  alt?: string;
}

const { subheadline, headline, text, image, alt = "Header image" } = Astro.props;
---

<section class="fade-up px-8 py-16 max-w-7xl mx-auto">
  <div class="flex flex-col-reverse justify-center md:flex-row items-center">
    <!-- Text -->
    <div class="w-full md:w-1/2">
      <p class=" subheadline uppercase tracking-widest mb-2">
        {subheadline}
      </p>
      <h2 class="aboutHeadline font-bold text-gray-900 mb-4">
        {headline}
      </h2>
      <p class="text-gray-600 text-base md:text-lg">
        {text}
      </p>
    </div>

    <!-- Image -->
    <div class="w-full md:w-1/2">
      <img src={image} alt={alt} class="md:w-full md:h-auto h-[480px] rounded-md object-cover" />
    </div>
  </div>
</section>