---
export interface Props {
  title: string
  bullet1: string
  bullet2: string
  bullet3: string
  image: string
}

const { title, bullet1, bullet2, bullet3, image } = Astro.props
---
<div class="card">
  <img src={image} alt={title} loading="lazy" />

  <div class="overlay">
    <h4><strong>{title}</strong></h4>
    <ul>
      <li>{bullet1}</li>
      <li>{bullet2}</li>
      <li>{bullet3}</li>
    </ul>
  </div>
</div>

<style>
.card {
  width: 280px;
  height: 350px;
  background: #f3f3f3;
  border-radius: 16px;
  overflow: hidden;
  position: relative;
  cursor: pointer;
  transition: transform 0.25s ease;

}

.card:hover {
  transform: scale(1.03);
}

/* Image */
.card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Full-card gradient blur overlay */
.overlay {
  position: absolute;
  inset: 0;                     /* full coverage */
  padding: 18px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;    /* text stays at bottom */
  gap: 6px;

  background: linear-gradient(
    to bottom,
    rgba(255,255,255,0) 0%,     /* transparent top */
    rgba(248, 241, 241, 0.65) 70%, /* fade grows */
    rgb(249, 244, 244) 100%  /* strong bottom */
  );

  
  opacity: 0;
  transition: opacity .35s ease;
  border-radius: inherit;
}

/* Desktop hover reveal */
.card:hover .overlay {
  opacity: 1;
}

/* ===== MOBILE ALWAYS VISIBLE ===== */
@media (max-width:768px) {
  .overlay {
    opacity: 1 !important;
  }
}
</style>