---
// Props: title (string), content (string or HTML)
const { title, content } = Astro.props;
---

<section class=" fade-up flex items-center justify-center ">
  <div class="max-w-7xl w-full grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-12">
    <h2 class="h2 text-4xl md:text-5xl font-bold leading-tight">
      {title}
    </h3>
    <p class=" text-gray-600 dark:text-gray-300 leading-relaxed">
      {content}
    </p>
  </div>
</section>