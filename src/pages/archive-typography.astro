---
import "../style/global.css";
import Navi from "../components/Navi.astro";
import ArchiveHero from "../components/Archive-hero.astro";
import Footer from "../components/Footer.astro";
import BentoGallery from "../components/BentoGallery.astro";

const galleryImages = [
  '/images/archive/book-mockup-one.png',
  '/images/archive/book-mockup-two.png',
  '/images/archive/book-mockup-four.png',
  '/images/archive/book-mockup-long.png'

  
];
const galleryImagesSecondary = [
  '/images/archive/book-mockup-five.png',
  '/images/archive/book-mockup-three.png',
  '/images/archive/book-mockup-wide-one.png',
    '/images/archive/book-mockup-back-long.png'

  
